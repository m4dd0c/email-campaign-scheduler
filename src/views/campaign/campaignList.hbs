<div class="pt-6 container mx-auto px-4">
  <h1 class="title is-3 has-text-violet">Email Campaigns List</h1>

  {{#if campaigns.length}}
    <div class="campaigns-grid">
      {{#each campaigns}}
        <article class="box has-background-dark">
          <h2
            class="has-text-white has-text-weight-bold is-size-4"
          >{{title}}</h2>
          <div class="is-flex is-align-items-center my-1">
            <small
              class="tag is-rounded is-capitalized mr-2"
              style="background-color: rgb(var(--violet-500)); color: rgb(var(--zinc-50));"
            >{{status}}</small>
            <small
              class="tag is-rounded is-info is-capitalized"
            >{{recipients.length}} Recipients</small>
          </div>
          <small class="has-text-grey-light is-italic">{{scheduledTime}}</small>
          <form method="GET" action="/campaigns/get/{{_id}}">
            <button class="button is-small mt-3" type="submit">
              <span class="icon is-small">
                <i class="fa fa-eye" aria-hidden="true"></i>
              </span>
              <span>See Details</span>
            </button>
          </form>
        </article>
      {{/each}}
    </div>
  {{else}}
    <p>No campaigns found.</p>
  {{/if}}
</div>
